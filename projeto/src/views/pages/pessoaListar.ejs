        <div class="mb-4">
            <h2><%- tituloCabecalho %></h2>
        </div>

        <div class="col-md-12 mb-1" id="divCardsPrincipal">
            <div class="card card-ocorrencia">
                <div class="card-header card-header-ocorrencia d-flex justify-content-between align-items-center" >
                    <h5 class="card-title mb-0">Pessoas Cadastradas</h5>
                    <a class="card-link ml-auto" data-toggle="collapse" href="#divCardOcorrencia"><i class="fa-solid fa-chevron-up fa-lg" style="color:white"></i></a>
                </div>
                <div id="divCardOcorrencia" class="collapse show" data-parent="#divCardsPrincipal">
                    <div class="card-body">

                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th scope="col">Nome</th>
                                <th scope="col">CPF</th>
                                <th scope="col">E-Mail</th>
                                <th scope="col">Foto</th>
                                <th scope="col">Ações</th>
                            </tr>
                            </thead>
                            <tbody>

                                <% 
                                    pessoasList.forEach(pessoa => { 
                                %>
                                        <tr>
                                            <td><%= pessoa.nmPessoa %></td>
                                            
                                            <td><%= pessoa.nuCPF %></td>
                                            <td><%= pessoa.edMail %></td>
                                            <td>
                                                <img src="<%- pessoa.urlFoto %>" alt="" width="35" height="35" class="rounded-circle  d-none d-md-block">
                                            </td>
                                            <td>
                                                <a class="nav-link" href="#" onclick="carregarConteudoMain('/api/pessoa/incluirInit/<%= pessoa.idPessoa %>');">
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </a>
                                            </td>
                                        </tr>
                                <%
                                   });

                                %>  
                            
                            </tbody>
                        </table>
                    </div>
                    <!-- <div class="card-footer">
                        <button type="button" id="btnPessoaIncluirInit" class="btn card-header-ocorrencia hover:bg-fuchsia-700"><i class="fa-solid fa-plus"></i> incluir</button>
                    </div> -->
                </div>
            </div>
        </div>

        <div class="col-md-12 mb-4 p-2 flex" style="padding-left: 480px; padding-right: 80px; ">
            <nav class="navbar bg-light" >
                <button type="button" id="btnPessoaIncluirInit" onclick="carregarConteudoMain('/api/pessoa/incluirInit/0');" class="btn card-header-ocorrencia hover:bg-fuchsia-700"><i class="fa-solid fa-plus"></i> incluir</button>
            </nav>
        </div>
        
